<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs')%>
<body class="body">
<%- include('./partials/nav.ejs') %>
<form id="post-form" method="post" action="/edit/<%= post.id %>?_method=PUT">
<div class="card">
    <div class="d-flex flex-row mb-3">
        <div class="col m-4">
            <label>Post title</label>
        <div class="form-outline form-white">
            <input type="text" class="form-control" name="title" value="<%= post.title %>">
        </div>
        </div>
        <div class="col m-4">
            <label>Author</label>
            <div class="form-outline form-white">
                <input type="text" class="form-control" name="author" value="<%= post.author %>">
            </div>
        </div>
        </div>
    <div class="col m-4">
    <label>Post text</label>
        <div class="form-outline form-white ">
            <input type="text" class="form-control mb-8" name="text" value="<%= post.text %>">
        </div>
    </div>
    <div class="card-body">
        <button type="submit" class="btn btn-dark float-end">Submit</button>
    </div>
</div>
</form>
</body>
</html>